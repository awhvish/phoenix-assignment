generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  Available
  Deployed
  Destroyed
  Decommissioned
}

model Gadget {
  id                  String   @id @default(cuid())
  name                String   @unique
  status              Status   @default(Available)
  success_probability Float
  createdAt           DateTime @default(now())
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}
